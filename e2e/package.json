{
  "name": "GestureHandlerE2E",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start --config ./metro.config.js",
    "test": "jest"
  },
  "dependencies": {
    "fbjs": "^1.0.0",
    "hoist-non-react-statics": "^3.2.1",
    "invariant": "^2.2.4",
    "prop-types": "^15.6.2",
    "react": "16.8.3",
    "react-native": "0.59.5",
    "react-native-vector-icons": "5.0.0",
    "react-navigation": "2.17.0"
  },
  "jest": {
    "preset": "react-native"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/runtime": "^7.4.3",
    "babel-jest": "^24.7.1",
    "babel-plugin-module-resolver": "^3.1.1",
    "detox": "^12.6.3",
    "glob-to-regexp": "^0.4.0",
    "jest": "^24.7.1",
    "metro-react-native-babel-preset": "^0.53.1",
    "mocha": "^5.2.0",
    "react-test-renderer": "16.8.3"
  },
  "detox": {
    "test-runner": "mocha",
    "runner-config": "e2e/mocha.opts",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "./ios/build/Build/Products/Debug-iphonesimulator/GestureHandler.app",
        "build": "xcodebuild -project ./ios/GestureHandler.xcodeproj -scheme GestureHandler -configuration Debug -sdk iphonesimulator -derivedDataPath ./ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7"
      },
      "android.emu.debug": {
        "binaryPath": "./android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd ./android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "name": "test"
      }
    }
  }
}
